<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.namanuma" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.MaterialThemeActivity"
            android:theme="@style/AppTheme.Material"
            android:label="@string/material_theme" >
        </activity>

        <activity
            android:name=".ui.MaterialLightThemeActivity"
            android:theme="@style/AppTheme.Material.Light"
            android:label="@string/material_light_theme" >
        </activity>

        <activity
            android:name=".ui.MaterialDarkThemeActivity"
            android:theme="@style/AppTheme.Material.Dark"
            android:label="@string/material_dark_theme" >
        </activity>

    </application>

</manifest>
